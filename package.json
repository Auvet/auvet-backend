{
  "name": "auvet-backend",
  "version": "1.0.0",
  "description": "Backend da aplicação Auvet - Sistema de Gerenciamento de Clínicas Veterinárias",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "start": "node dist/server.js",
    "build": "tsc",
    "build:full": "tsc && prisma generate && prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": ["veterinary", "clinic", "api", "nodejs", "prisma"],
  "author": "Izabella Alves Pereira",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "@prisma/client": "^5.7.1",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "prisma": "^5.7.1",
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.17",
    "@types/bcryptjs": "^2.4.2",
    "ts-node": "^10.9.1"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
